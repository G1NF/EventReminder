<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ciwan.events.activities.EventDetailActivity">

    <android.support.constraint.Guideline
        android:id="@+id/gl_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3"
        />


    <EditText
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Event Name"
        >
    </EditText>


    <EditText
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        app:layout_constraintRight_toRightOf="@+id/tv_name"
        android:hint="Event Type"
        >
    </EditText>



    <EditText
        android:id="@+id/tv_detail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textSize="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_type"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="Detail"
        android:gravity="top"
        >
    </EditText>



    <TextView
        android:id="@+id/tv_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Start Date:"
        app:layout_constraintEnd_toEndOf="@id/gl_vertical"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail" />

    <EditText
        android:id="@+id/et_start_date"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:textSize="12dp"
        android:ems="10"
        app:layout_constraintBottom_toBottomOf="@+id/tv_start_date"
        app:layout_constraintTop_toTopOf="@+id/tv_start_date"
        app:layout_constraintLeft_toRightOf="@+id/tv_start_date"
        />

    <Button
        android:id="@+id/btn_start_date"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_date_range_black_24dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_start_date"
        app:layout_constraintTop_toTopOf="@+id/et_start_date"
        app:layout_constraintLeft_toRightOf="@+id/et_start_date" />


    <EditText
        android:id="@+id/et_start_date_time"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginLeft="30dp"
        android:ems="10"
        app:layout_constraintBottom_toBottomOf="@+id/btn_start_date"
        app:layout_constraintTop_toTopOf="@+id/btn_start_date"
        app:layout_constraintLeft_toRightOf="@+id/btn_start_date"
        />


    <Button
        android:id="@+id/btn_start_date_time"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_access_time_black_24dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_start_date_time"
        app:layout_constraintTop_toTopOf="@+id/et_start_date_time"
        app:layout_constraintLeft_toRightOf="@+id/et_start_date_time" />

    <TextView
        android:id="@+id/tv_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="End Date:"
        app:layout_constraintEnd_toEndOf="@id/gl_vertical"
        app:layout_constraintTop_toBottomOf="@+id/tv_start_date" />

    <EditText
        android:id="@+id/et_end_date"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:textSize="12dp"
        android:ems="10"
        app:layout_constraintBottom_toBottomOf="@+id/tv_end_date"
        app:layout_constraintTop_toTopOf="@+id/tv_end_date"
        app:layout_constraintLeft_toRightOf="@+id/tv_end_date"
        />


    <Button
        android:id="@+id/btn_end_date"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_date_range_black_24dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_end_date"
        app:layout_constraintTop_toTopOf="@+id/et_end_date"
        app:layout_constraintLeft_toRightOf="@+id/et_end_date" />


    <EditText
        android:id="@+id/et_end_date_time"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:textSize="15dp"
        android:ems="10"
        app:layout_constraintBottom_toBottomOf="@+id/btn_end_date"
        app:layout_constraintTop_toTopOf="@+id/btn_end_date"
        app:layout_constraintLeft_toRightOf="@+id/btn_end_date"
        />


    <Button
        android:id="@+id/btn_end_date_time"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_access_time_black_24dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_end_date_time"
        app:layout_constraintTop_toTopOf="@+id/et_end_date_time"
        app:layout_constraintLeft_toRightOf="@+id/et_end_date_time" />


    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Repeat Frequency:"
        app:layout_constraintEnd_toEndOf="@id/gl_vertical"
        app:layout_constraintTop_toBottomOf="@+id/tv_end_date" />

    <EditText
        android:id="@+id/et_rf"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/tv_age"
        app:layout_constraintTop_toTopOf="@+id/tv_age"
        app:layout_constraintLeft_toRightOf="@+id/tv_age"
        />


    <EditText
        android:id="@+id/et_address"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/et_rf"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="Address"
        >
    </EditText>

    <Button
        android:id="@+id/btn_reminders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et_address"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Reminders"
        >

    </Button>



    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="SAVE"
        >

    </Button>



</android.support.constraint.ConstraintLayout>
